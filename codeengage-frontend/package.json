{
  "name": "codeengage-frontend",
  "version": "1.0.0",
  "description": "A modern platform for developers to save, share, and discover code snippets",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "http-server dist -p 3000 -c-1",
    "lint": "eslint src --ext .js,.jsx",
    "format": "prettier --write src/**/*.{js,jsx,css,html}",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "codemirror": "^6.0.1",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-python": "^6.1.6",
    "@codemirror/lang-php": "^6.0.1",
    "@codemirror/lang-css": "^6.2.1",
    "@codemirror/lang-html": "^6.4.8",
    "@codemirror/lang-sql": "^6.5.5",
    "@codemirror/lang-xml": "^6.0.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.28.4",
    "@codemirror/state": "^6.4.1",
    "@codemirror/commands": "^6.6.1",
    "@codemirror/search": "^6.5.6",
    "@codemirror/autocomplete": "^6.17.0",
    "@codemirror/lint": "^6.8.1",
    "@codemirror/highlight": "^6.5.0",
    "marked": "^12.0.2",
    "dompurify": "^3.1.6",
    "prismjs": "^1.29.0",
    "diff": "^5.1.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "vite": "^5.4.8",
    "eslint": "^8.57.1",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "http-server": "^14.1.1",
    "tailwindcss": "^3.4.15",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "@tailwindcss/forms": "^0.5.9",
    "@tailwindcss/typography": "^0.5.15"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "keywords": [
    "code-snippets",
    "developer-tools",
    "collaboration",
    "code-sharing",
    "javascript",
    "php",
    "web-app"
  ],
  "author": "CodeEngage Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/codeengage/codeengage.git"
  }
